@model List<Recipe>

<h1>Recipe List</h1>

@if (Model.Count > 0)
{
    <table>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Date Added</th>
        </tr>
        @foreach (var recipe in Model)
        {
            <a href="/Recipe/Details/"+@recipe.Id>
                <td>@recipe.Name</td>
                <td>@recipe.Category</td>
                <td>@recipe.Description</td>
                <td>@recipe.date_added</td>
            </a>
        }
    </table>
}
else
{
    <p>No recipes found.</p>
}
