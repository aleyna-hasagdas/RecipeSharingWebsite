@model List<RecipeModel>

<div class="container">
    <div id="home" class="page-container">
        <h4>Recipes</h4>

        @if (Model.Count > 0)
        {
            <div class="favorites">
                @foreach (var recipe in Model)
                {
                    <div class="favorite content-container">
                        <img src=@recipe.Image alt=@recipe.RecipeName/>
                        <h6>How to make @recipe.RecipeName ?</h6>
                        <p class="description">@recipe.Category</p>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No recipes found.</p>
        }
    </div>

    </div>